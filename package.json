{
  "name": "zotero-arxiv-workflow",
  "type": "module",
  "version": "0.2.16",
  "description": "arXiv Workflow for Zotero",
  "config": {
    "addonName": "arXiv Workflow for Zotero",
    "addonID": "arxiv@allanchain.github.com",
    "addonRef": "arxiv-workflow",
    "addonInstance": "arXivWorkflow",
    "prefsPrefix": "extensions.zotero.arxiv-workflow"
  },
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": "eslint --fix",
    "*.{ts,js,mjs,css,xhtml,md,yaml,json}": "prettier -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AllanChain/zotero-arxiv-workflow.git"
  },
  "author": "Allan Chain",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/AllanChain/zotero-arxiv-workflow/issues"
  },
  "homepage": "https://github.com/AllanChain/zotero-arxiv-workflow#readme",
  "dependencies": {
    "p-queue": "^8.1.0",
    "zotero-plugin-toolkit": "^5.0.0-1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.7.4",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^5.2.1",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.0.0",
    "mocha": "^11.7.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "zotero-plugin-scaffold": "^0.7.0",
    "zotero-types": "^4.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  },
  "packageManager": "npm@11.5.1+sha512.232e6f5d9e799bcb486920b3e9ba907fdf96e576cf7e8c9446c8162e33a416096a1d37a9e910d9a918f6b1f606791c99bc6bb61ee2569b496ec74af13d0dbd95"
}
