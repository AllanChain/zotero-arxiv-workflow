{
  "name": "zotero-arxiv-workflow",
  "type": "module",
  "version": "0.2.16",
  "description": "arXiv Workflow for Zotero",
  "config": {
    "addonName": "arXiv Workflow for Zotero",
    "addonID": "arxiv@allanchain.github.com",
    "addonRef": "arxiv-workflow",
    "addonInstance": "arXivWorkflow",
    "prefsPrefix": "extensions.zotero.arxiv-workflow"
  },
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": "eslint --fix",
    "*.{ts,js,mjs,css,xhtml,md,yaml,json}": "prettier -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AllanChain/zotero-arxiv-workflow.git"
  },
  "author": "Allan Chain",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/AllanChain/zotero-arxiv-workflow/issues"
  },
  "homepage": "https://github.com/AllanChain/zotero-arxiv-workflow#readme",
  "dependencies": {
    "p-queue": "^8.1.0",
    "zotero-plugin-toolkit": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^5.2.1",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  },
  "packageManager": "npm@11.5.2+sha512.aac1241cfc3f41dc38780d64295c6c6b917a41e24288b33519a7b11adfc5a54a5f881c642d7557215b6c70e01e55655ed7ba666300fd0238bc75fb17478afaf3"
}
